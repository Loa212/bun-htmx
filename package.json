{
  "name": "bun-htmx",
  "module": "src/index.tsx",
  "type": "module",
  "browserslist": [
    ">0.3%",
    "not dead",
    "not op_mini all"
  ],
  "scripts": {
    "build": "bun run build:postcss && bun run build:server",
    "build:postcss": "postcss -o public/style.css src/css/main.css",
    "build:server": "bun build --target=bun ./src/index.tsx --outfile=build/index.js --minify",
    "dev": "concurrently \"bun run dev:postcss\" \"bun run dev:server\"",
    "dev:postcss": "bun run build:postcss -- --watch",
    "dev:server": "bun run --watch src/index.tsx",
    "start": "bun run build/index.js",
    "db:gen": "bunx drizzle-kit generate --dialect sqlite --schema ./src/db/schema.ts",
    "db:migrate": "bun run ./src/db/migrate.ts",
    "db:seed": "bun run ./src/db/seed.ts"
  },
  "dependencies": {
    "bun-types": "latest",
    "concurrently": "^8.2.2",
    "daisyui": "^3.7.3",
    "drizzle-orm": "^0.35.2",
    "hono": "^3.6.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.5",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@fullhuman/postcss-purgecss": "^5.0.0",
    "@types/react-dom": "^18.2.7",
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.1",
    "drizzle-kit": "^0.26.2",
    "postcss": "^8.4.31",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0"
  }
}
